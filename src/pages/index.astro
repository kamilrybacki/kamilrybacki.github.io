---
import SVG from '@components/StyledSVG.astro';
import BasicPageLayout from '@layouts/BasicPageLayout.astro';
import SplashDecoration from '@components/SplashDecoration';
import Menu from '@components/Menu';

import '@styles/glitch.css';

const indexOptions = [
  {
    name: 'Projects',
    link: '/projects',
    style: 'text-accent text-7xl'
  },
  {
    name: 'Blog',
    link: '/about',
    style: ''
  },
  {
    name: 'Contact',
    link: '/contact',
    style: ''
  }
];
---
<script define:vars={{indexOptions}}/>

<BasicPageLayout 
  title="Kamil Rybacki"
  style="flex flex-col justify-center items-center"
>
  <div class="flex flex-row justify-around items-center my-auto w-full">
    <div class="w-fit ml-auto flex flex-col items-end">
      <div class="flex flex-row">
        <div class="relative flex justify-center w-32 text-accent ml-3">
          <SVG src="images/logo" alt="Logo"/>
        </div>
        <h1 class="relative top-6 text-8xl font-display font-[700]">
          amil Rybacki
        </h1>
      </div>
      <div class="border-[1px] border-accent my-4 w-[105%]"/>
      <h2 class="relative flex flex-row items-center text-5xl mt-2 ml-3 font-body font-[700] text-glow gap-3">
        <span class="my-auto">
          Figuring out
        </span>
        <span
          class="hero glitch layers deform text-5xl tracking-widest my-auto"
          data-text="undefineds"
        >
          undefineds
      </span>
      </h2>
      <Menu
        options={indexOptions}
        style='flex flex-col gap-6 text-5xl font-bold mt-20'
        globalListStyle="ml-auto"
      />
    </div>
    <SplashDecoration/>
  </div>
</BasicPageLayout>
