---
layout: base.njk
title: Home
---

<header class="site-header">
  <div class="header-top">
    <h1 class="site-title">Kamil Rybacki</h1>
    <div class="social-links">
      <a href="https://linkedin.com/in/your-profile" class="social-link" aria-label="LinkedIn">
        <img src="https://s.magecdn.com/social/mb-linkedin.svg" alt="LinkedIn" width="20" height="20">
      </a>
      <a href="https://github.com/kamilrybacki" class="social-link" aria-label="GitHub">
        <img src="https://s.magecdn.com/social/mb-github.svg" alt="GitHub" width="20" height="20">
      </a>
    </div>
  </div>
  <div class="site-description">
    <div class="dotted-line"></div>
    <p>Turning complex backend puzzles into fast, reliable Python</p>
    <div class="dotted-line"></div>
  </div>
</header>

<section id="articles" class="articles-section">
  <!-- Article Filter Buttons -->
  <div class="article-filters">
    <button class="filter-btn active" data-filter="all">All</button>
    <button class="filter-btn" data-filter="IT">IT</button>
    <button class="filter-btn" data-filter="Hobby">Hobby</button>
  </div>
  
  <!-- Fixed height container to prevent layout jumps -->
  <div class="articles-container">
    <ul class="article-list">
      {% for article in collections.articles | head(10) %}
      <li class="article-item" data-category="{{ article.data.category or 'Misc' }}">
        <h3 class="article-title">
          <a href="{{ article.url }}">{{ article.data.title }}</a>
        </h3>
        <p class="article-date">{{ article.data.date | dateFormat }}</p>
        {% if article.data.description %}
        <p class="article-description">{{ article.data.description }}</p>
        {% endif %}
        {% if article.data.category %}
        <span class="article-category">{{ article.data.category }}</span>
        {% endif %}
      </li>
      {% endfor %}
    </ul>
    
    <!-- No results message -->
    <div class="no-articles-message">
      <p>No articles found in this category.</p>
    </div>
  </div>
  
  {% if collections.articles.length > 10 %}
  <p><a href="/articles/">View all articles â†’</a></p>
  {% endif %}
</section>