{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@images/*": ["public/assets/images/*"],
      "@badges/*": ["pubic/assets/badges/*"],
      "@utils/*": ["src/utils/*"],
      "@content/*": ["content/*"],
      "@root/*": ["./*"],
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
  },
  "exclude": [
    "node_modules",
    "dist",
    "jupyterlite",
    "public",
  ]
}