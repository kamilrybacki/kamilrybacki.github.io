{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@images/*": ["assets/images/*"],
      "@badges/*": ["assets/badges/*"],
      "@utils/*": ["src/utils/*"],
      "@content/*": ["content/*"],
      "@root/*": ["./*"],
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}